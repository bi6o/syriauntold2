    function cityChosen(cityId) {
        $.post('{{path('homepage_city_ajax')}}',
                {id: cityId},
                function (data) {
                    $("#ajax").html(data);
                }, "json");
    }

    $(document).ready(function () {
        $('.rwl-cities button').on('click', function () {
            cityChosen(
                    $(this).attr('value')
            );
        });
    });
</script>
