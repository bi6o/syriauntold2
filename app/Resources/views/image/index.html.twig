{% extends 'base.html.twig' %}

{% block body %}
    <h1>Image list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Imageurl</th>
                <th>Cityid</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for image in images %}
            <tr>
                <td><a href="{{ path('admin_image_show', { 'id': image.id }) }}">{{ image.id }}</a></td>
                <td>{{ image.imageUrl }}</td>
                <td>{{ image.cityId }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('admin_image_show', { 'id': image.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('admin_image_edit', { 'id': image.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_image_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
