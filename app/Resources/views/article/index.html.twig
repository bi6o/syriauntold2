{% extends 'base.html.twig' %}

{% block body %}
    <h1>Article list</h1>
    <div class="row">
        <table class="col-md-8">
            <thead>
            <tr>
                <th>Id</th>
                <th>Articletitle</th>
                <th>Articletitlear</th>
                <th>Articledesc</th>
                <th>Articledescar</th>
                <th>Articleimage</th>
                <th>Articlelink</th>
                <th>Cityid</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for article in articles %}
                <tr>
                    <td><a href="{{ path('admin_article_show', { 'id': article.id }) }}">{{ article.id }}</a></td>
                    <td>{{ article.articleTitle }}</td>
                    <td>{{ article.articleTitleAr }}</td>
                    <td>{{ article.articleDesc }}</td>
                    <td>{{ article.articleDescAr }}</td>
                    <td>{{ article.articleImage }}</td>
                    <td>{{ article.articleLink }}</td>
                    <td>{{ article.cityId }}</td>
                    <td>
                        <ul>
                            <li>
                                <a href="{{ path('admin_article_show', { 'id': article.id }) }}">show</a>
                            </li>
                            <li>
                                <a href="{{ path('admin_article_edit', { 'id': article.id }) }}">edit</a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <div class="row">
        <ul>
            <li>
                <a href="{{ path('admin_article_new') }}">Create a new entry</a>
            </li>
        </ul>
    </div>
{% endblock %}
