{% extends 'base.html.twig' %}

{% block body %}
    <h1>City edit</h1>
    <div class="tabs">
        <ul class="tab-links">
            <li class="active"><a href="#tab1">English section</a></li>
            <li><a href="#tab2">Arabic section</a></li>
        </ul>
        <div class="tab-content">
            {{ form_start(edit_form) }}
            <div id="tab1" class="tab active">
                {{ form_row(edit_form.cityTitle) }}
                {{ form_row(edit_form.cityDesc) }}
            </div>
            <div id="tab2" class="tab">
                {{ form_row(edit_form.cityTitleAr) }}
                {{ form_row(edit_form.cityDescAr) }}
            </div>
        </div>
    </div>
        {{ form_widget(edit_form) }}
        <input type="submit" value="Edit" />
    {{ form_end(edit_form) }}

    <ul>
        <li>
            <a href="{{ path('admin_city_index') }}">Back to the list</a>
        </li>
    </ul>
{% endblock %}
